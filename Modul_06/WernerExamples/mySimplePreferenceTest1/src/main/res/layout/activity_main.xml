<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/linLayMain"
    android:background="@color/myColor1"
    tools:context="dt.uit.no.MyTestActivity" >

     <EditText
         android:id="@+id/etInput"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@color/myTextBackgroundColor2"
         android:ems="10" />

    <Switch
        android:id="@+id/swTextBackgroundColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Endre bakgrunnsfarge pÃ¥ tekstfeltet"
        android:checked="true"
        android:onClick="doSwitchTextBackgroundColor"
        />

    <Switch
        android:id="@+id/swBackgroundColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Endre bakgrunnsfarge"
        android:checked="true"
        android:onClick="doSwitchBackgroundColor"
        />

    <CheckBox
        android:id="@+id/cbSaveOnExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lagre ved avslutning"
        android:checked="false"
         />

</LinearLayout>
